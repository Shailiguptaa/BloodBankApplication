<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/header_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigationUserImage"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/bbprofile"/>
    <TextView
        android:id="@+id/navigationUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/navigationUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/navigationUserBloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood group"
        android:textSize="16sp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/navigationUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="16sp"
        android:textColor="@color/white" />


</LinearLayout>